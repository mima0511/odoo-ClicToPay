<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="acquirer_form_clictopay" model="ir.ui.view">
            <field name="name">acquirer.form.clictopay</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.payment_acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'clictopay')]}">
                        <field name="clictopay_username"/>
                        <field name="clictopay_password"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>